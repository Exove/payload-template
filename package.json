{
  "name": "payload-template",
  "version": "1.0.0",
  "author": "Matti Hernesniemi",
  "description": "A template to get started with Payload 3 and Next.js 15",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "predev": "node ./src/scripts/predev.mjs",
    "dev": "pnpm predev && cross-env OTEL_SDK_DISABLED=true NODE_OPTIONS=--no-deprecation next dev --turbopack",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "ci": "pnpm install && payload migrate && pnpm build && pnpm reindex",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env OTEL_SDK_DISABLED=true NODE_OPTIONS=--no-deprecation next start",
    "prepare": "husky",
    "reindex": "cross-env NODE_OPTIONS=--no-deprecation dotenv -e .env tsx ./src/scripts/reindexToAlgolia.ts",
    "create:admin": "cross-env NODE_OPTIONS=--no-deprecation dotenv -e .env tsx ./src/scripts/createAdminUser.ts",
    "resize": "cross-env NODE_OPTIONS=--no-deprecation dotenv -e .env tsx ./src/scripts/resizeImages.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "db:export": "bash ./scripts/db-export.sh",
    "db:import": "bash ./scripts/db-import.sh"
  },
  "dependencies": {
    "@c15t/backend": "^1.6.0",
    "@c15t/nextjs": "^1.6.0",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@libsql/kysely-libsql": "^0.4.1",
    "@next/third-parties": "^15.5.2",
    "@payloadcms/db-postgres": "^3.54.0",
    "@payloadcms/next": "^3.54.0",
    "@payloadcms/payload-cloud": "^3.54.0",
    "@payloadcms/plugin-nested-docs": "^3.25.0",
    "@payloadcms/plugin-seo": "^3.54.0",
    "@payloadcms/richtext-lexical": "^3.54.0",
    "@payloadcms/ui": "^3.54.0",
    "algoliasearch": "^5.37.0",
    "better-sqlite3": "^12.2.0",
    "kysely": "^0.28.5",
    "motion": "^12.4.6",
    "next": "^15.5.2",
    "next-intl": "^4.3.6",
    "payload": "^3.54.0",
    "posthog-js": "^1.265.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-instantsearch": "^7.7.0",
    "sharp": "^0.34.3",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@opentelemetry/exporter-jaeger": "^2.1.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0 <23"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
